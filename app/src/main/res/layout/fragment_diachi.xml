<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#BFFFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_back_diachi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/raleway_black"
                android:gravity="center"
                android:text="Địa chỉ mới"
                android:textColor="@color/text"
                android:textSize="30dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/rlHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardViewDiaChi"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/lato_regular"
            android:text="Họ tên"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ed_hoten_fragmenthoadon"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/lato_regular"
            android:hint="họ tên người nhận" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlSdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlHoTen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/lato_regular"
            android:text="Số điện thoại"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ed_sdt_fragmenthoadon"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/lato_regular"
            android:hint="số điện thoại" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlSdt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/lato_regular"
            android:text="Email"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ed_email_fragmenthoadon"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/lato_regular"
            android:hint="email" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlEmail">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/lato_regular"
            android:text="Địa chỉ nhận"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ed_diachinhan_fragmenthoadon"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/lato_regular"
            android:hint="địa chỉ nhận" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnchon_diachi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#E67216"
        android:fontFamily="@font/raleway_black"
        android:text="Chọn"
        android:textSize="20sp" />

</RelativeLayout>