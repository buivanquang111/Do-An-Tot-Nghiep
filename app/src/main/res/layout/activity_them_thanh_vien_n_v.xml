<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NhanVien.ThemThanhVienNVActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B7FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back_themthanhvien_nhanvien"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/lato_black"
                android:gravity="center_horizontal"
                android:text="Thêm thành viên"
                android:textColor="#0C0C0C"
                android:textSize="35dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_them_thanhvien_nhanvien"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_thongtincanhan"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <EditText
            android:id="@+id/ed_name_themthanhvien_nhanvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/lato_regular"
            android:hint="họ tên"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/ed_tendangnhap_themthanhvien_nhanvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/lato_regular"
            android:hint="tên đăng nhập"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/ed_sdt_themthanhvien_nhanvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/lato_regular"
            android:hint="số điện thoại"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/ed_email_themthanhvien_nhanvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/lato_regular"
            android:hint="email"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/ed_diachi_themthanhvien_nhanvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/lato_regular"
            android:hint="địa chỉ"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/ed_pass_themthanhvien_nhanvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/lato_regular"
            android:hint="mật khẩu"
            android:paddingLeft="10dp" />

        <Button
            android:id="@+id/btn_Them_ThanhVien_nhanvien"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#f8a138"
            android:fontFamily="@font/lato_black"
            android:text="Thêm"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>