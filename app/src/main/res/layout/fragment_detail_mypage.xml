<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_backDetail_mypage"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/lato_black"
                android:gravity="center"
                android:paddingRight="50dp"
                android:text="Hồ sơ"
                android:textColor="@color/text"
                android:textSize="30dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:text="Tên"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_hoten_detail_mypage"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical|end"
            android:text="aaaaa"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:text="Tên đăng nhập"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_tendangnhap_detail_mypage"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical|end"
            android:text="aaaaa"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:text="Email"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_email_detail_mypage"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical|end"
            android:text="aaaaa"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:text="Số điện thoại"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_sdt_detail_mypage"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical|end"
            android:text="01234566"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:text="Password"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_password_detail_mypage"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical|end"
            android:text="01234566"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>