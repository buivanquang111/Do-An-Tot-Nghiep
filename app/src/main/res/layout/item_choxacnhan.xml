<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="5dp"
    android:background="#C3FBF6F6">

    <ImageView
        android:id="@+id/image_item_choxacnhan"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/txt_tensp_item_choxacnhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/image_item_choxacnhan"
        android:fontFamily="@font/lato_regular"
        android:paddingLeft="30dp"
        android:text="abc"
        android:textColor="@color/text"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_thanhtien_item_choxacnhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_gia_item_choxacnhan"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/lato_regular"
        android:text="100000000"
        android:textColor="#EF3030"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_gia_item_choxacnhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_tensp_item_choxacnhan"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/image_item_choxacnhan"
        android:fontFamily="@font/lato_regular"
        android:text="1000000000"
        android:textColor="@color/text"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_slmua_item_choxacnhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_tensp_item_choxacnhan"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/lato_regular"
        android:text="2"
        android:textColor="@color/text"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_gia_item_choxacnhan"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/txt_thanhtien_item_choxacnhan"
        android:fontFamily="@font/lato_regular"
        android:text="Thành tiền"
        android:textColor="@color/text"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_thanhtien_item_choxacnhan"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_check_xanh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/lato_regular"
            android:text="Đang chờ xác nhận"
            android:textColor="#2EA48D"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_ngaydathang_xacnhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/lato_regular"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="ngày dặt hàng: 20/01/2021"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layerType="software"
        android:src="@drawable/line" />

</RelativeLayout>