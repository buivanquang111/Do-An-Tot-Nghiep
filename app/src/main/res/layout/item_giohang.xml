<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRevealLayout"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="8dp"
    app:dragEdge="right"
    app:mode="same_level">

    <LinearLayout
        android:id="@+id/linerlayout_itemgiohang"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:background="#F11616"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="xóa"
            android:textColor="#fff" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E8F8F5F5"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_itemgiohang"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_title_itemgiohang"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:paddingRight="60dp"
                    android:text="aaaaa"
                    android:textColor="@color/text"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_gia_itemgiohang"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:paddingRight="60dp"
                    android:text="10000"
                    android:textColor="#EF5050"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="end|center"
                        android:text="số lượng:"
                        android:textColor="@color/text"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txt_soluongmua_itemgiohang"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_regular"
                        android:paddingLeft="10dp"
                        android:text="10"
                        android:textColor="@color/text"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</com.chauthai.swipereveallayout.SwipeRevealLayout>