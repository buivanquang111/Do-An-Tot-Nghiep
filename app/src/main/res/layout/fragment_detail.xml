<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4ab52"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_product_detail"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/image_backDetail"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_back" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bovien">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ten_dongho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tym_dongho"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <!--                    <TextView-->
                    <!--                        android:text="Đồng hồ"-->
                    <!--                        android:textSize="30dp"-->
                    <!--                        android:textColor="@color/text"-->
                    <!--                        android:textStyle="bold"-->
                    <!--                        android:gravity="center"-->
                    <!--                        android:paddingLeft="20dp"-->
                    <!--                        android:layout_width="150dp"-->
                    <!--                        android:layout_height="50dp"/>-->
                    <TextView
                        android:id="@+id/txt_detailtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_black"
                        android:gravity="center_horizontal"
                        android:text="aaa"
                        android:textColor="@color/text"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/gia_dongho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ten_dongho"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/txt_giaDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="50dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center"
                        android:text="1000"
                        android:textColor="#ED0F0F"
                        android:textSize="25dp" />

                    <ImageView
                        android:id="@+id/btn_muahang_detail"
                        android:layout_width="100dp"
                        android:layout_height="65dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"
                        android:backgroundTint="@color/color_selected_bottom_nv"
                        android:src="@drawable/icon_add_giohang"
                        android:text="Mua hàng" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_detalproduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/gia_dongho"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato_regular"
                    android:paddingLeft="30dp"
                    android:text="aaaaaaaaaaaa"
                    android:textColor="@color/text"
                    android:textSize="25dp" />

                <RelativeLayout
                    android:id="@+id/tym_dongho"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/tym_trang"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/tym_trang" />

                    <ImageView
                        android:id="@+id/tym_do"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/tym_do"
                        android:visibility="invisible" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>


</RelativeLayout>