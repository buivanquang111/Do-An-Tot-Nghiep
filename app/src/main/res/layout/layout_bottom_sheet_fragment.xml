<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/image_bottomsheet_fragment"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_gia_bottomsheet_fragment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/lato_black"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="1000"
                android:textColor="#ED0F0F" />

            <TextView
                android:id="@+id/txt_title_bottomsheet_fragment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/lato_black"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="aaa"
                android:textColor="@color/text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_close_bottomsheet_fragment"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="65dp"
                android:src="@drawable/ic_close" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="Kho:" />

                <TextView
                    android:id="@+id/txt_soluong_bottomsheet_fragment"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:paddingRight="25dp"
                    android:text="10" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/lato_black"
            android:gravity="center"
            android:text="số lượng"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3">

            <ImageView
                android:id="@+id/image_soluong_giam_bottomsheetfragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_slgiam"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/ed_soluong_bottomsheetfragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:fontFamily="@font/lato_black"
                android:gravity="center"
                android:hint="0"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/image_soluong_tang_bottomsheetfragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_sltang" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txttest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text" />

    <Button
        android:id="@+id/btn_dathang_bottomsheet_fragmnet"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#f8a138"
        android:fontFamily="@font/raleway_black"
        android:text="Đặt hàng"
        android:textSize="20dp" />

</LinearLayout>