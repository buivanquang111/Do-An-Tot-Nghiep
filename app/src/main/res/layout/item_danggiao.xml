<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp">

    <ImageView
        android:id="@+id/image_item_danggiao"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_launcher_background"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/lato_black"
        android:text="chờ thanh toán"
        android:textColor="#EA3030"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_tensp_item_danggiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/image_item_danggiao"
        android:fontFamily="@font/lato_regular"
        android:paddingLeft="30dp"
        android:text="abc"
        android:textColor="@color/text"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_thanhtien_item_danggiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_gia_item_danggiao"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/lato_regular"
        android:text="100000000"
        android:textColor="#EF3030"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_gia_item_danggiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_tensp_item_danggiao"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/image_item_danggiao"
        android:fontFamily="@font/lato_regular"
        android:text="1000000000"
        android:textColor="@color/text"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_slmua_item_danggiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_tensp_item_danggiao"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/lato_regular"
        android:text="2"
        android:textColor="@color/text"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_gia_item_danggiao"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/txt_thanhtien_item_danggiao"
        android:fontFamily="@font/lato_regular"
        android:text="Thành tiền"
        android:textColor="@color/text"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_thanhtien_item_danggiao"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_danggiao_xanh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/lato_regular"
            android:text="Kiện hàng đã rời kho"
            android:textColor="#2EA48D"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/txt_thoigian_dukien_giao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/lato_regular"
            android:text="Đăng chờ nhận sản phẩm và thanh toán khi nhận hàng dự kiến vào # 1-1-2021." />

        <Button
            android:id="@+id/btn_danhanduochang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:backgroundTint="#f8a138"
            android:fontFamily="@font/lato_regular"
            android:text="Đã nhận được hàng"
            android:textSize="10dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layerType="software"
        android:src="@drawable/line" />
</RelativeLayout>